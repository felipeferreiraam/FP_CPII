exe 7
const max_via = 60
const multa_por_km_excedente = 3.99

var velocidade = prompt("Digite o valor em km/h")
var excedente = velocidade - max_via
var multa = excedente * multa_por_km_excedente

if (velocidade > max_via){
  alert ("O valor da multa é:" + multa)
} else {
   alert ("Voce nao teve multas")
    }
