}

//Exer.8 - Combustivel

var produto = prompt ("Deseja abstecer Etanol ou Gasolina ?")

var produtoGasolina = gasolina
var produtoEtanol = etanol

var litros = prompt ("Infome a quantidade litros abastecido")

var gasolina = 5.99
var etanol = 4.01

if (produto == produtoGasolina){
     alert ("O total de gasolina foi: R$" +Math.trunc(litros) * Math.trunc(gasolina))
}else {
  alert ("O total de etanol foi: R$" +Math.trunc(litros) * Math.trunc(etanol))
}

//Exer.9 Calculadora

var n1 = prompt ("Informe valor 1")
var n2 = prompt ("Informe valor 2")

var opcao = prompt ("Escolha a opção: " + 1 + "-Soma; " + 2 + "-Subtração; " + 3 + "-Multiplicaçao; " + 4 + "-Divisão; ")

  
var soma = parseFloat(n1)+ parseFloat(n2)
var sub = parseFloat(n1)- parseFloat(n2)
var mult = parseFloat(n1)* parseFloat(n2)
var div = parseFloat(n1) / parseFloat(n2)

if (opcao == 1){
 alert (soma)
} else if (opcao ==2){
  alert (sub)
} else if (opcao ==3){
  alert (mult)
} else if (opcao ==4){
  alert (div)
}

