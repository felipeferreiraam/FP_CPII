//Exer.6 - Faixa de idade

var idade = prompt ("Informe sua Idade")

if ( idade >0 && idade <=10) {
  alert ("Sua classificaçao é Criança!")
} else if (idade >10 && idade <= 15) {
   alert ("Sua classificaçao é Adolescente!")
} else if  (idade >16 && idade <= 18) {
  alert ("Sua classificaçao é Jovem!")
}else if (idade >19 && idade <= 60) {
  alert ("Sua classificaçao é Adulto!")
}else if (idade >= 61) {
 alert ("Sua classificaçao é Idoso!")
}

